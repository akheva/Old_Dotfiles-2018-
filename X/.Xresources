
! ~/.Xresources
!

! X Settings
Xft.dpi: 112
Xcursor.theme: Neutral

! Colour Scheme
#include ".config/termcolors/gruvbox.dark"

! URxvt Options
URxvt.depth: 32
URxvt.scrollstyle: rxvt
URxvt.scrollBar: off
URxvt.urgentOnBell: True
URxvt.visualBell: True
URxvt.cursorColor: #00FF00
URxvt.loginShell: True
URxvt.url-launcer: /usr/bin/xdg-open
URxvt.termName: rxvt-unicode-256color
! bold, italic, underline
URxvt.colorBD: #B5BD68
URxvt.colorIT: #B294BB
URxvt.colorUL: #81A2BE
! font
URxvt.font: xft:Hack:size=10, xft:unifont
URxvt.boldFont:  xft:Hack:size=10, xft:unifont
URxvt.italicFont: xft:Hack:size=10, xft:unifont
URxvt.boldItalicFont: xft:Hack:size=10, xft:unifont
URxvt.letterSpace: -1
! extensions
URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select
! clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob
! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.autocopy: true
URxvt.url-select.button: 1
URxvt.url-select.launcher: /usr/bin/firefox
URxvt.url-select.underline: true
